<header class="row position-relative">
    <div class="col-12">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/">
                <img src="<%- cloudinary.url("logos/ssa-logo-white.png", {secure: true}) %>" height="30" class="d-inline-block align-top" alt="">
                <span class="small ml-2 hidden-xs">Saint Seiya Awakening - Wiki</span>
                <span class="small ml-2 d-inline-block d-sm-none">SSAW</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                    <i class="material-icons">menu</i>
                </span>
            </button>

            <div id="menu" class="menu collapse navbar-collapse">
                <ul class="navbar-nav ml-auto mr-0 pr-2">
                    <li class="nav-item px-2">
                        <a class="nav-link" href="/saints/show">Saints</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" href="/cosmos/show">Cosmos</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" href="/install-game">Installation</a>
                    </li>
                    <li class="nav-item px-2">
                        <div class="dropdown">
                            <a id="pick-lang" class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">language</i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="pick-lang">
                                <% for (let language in utils.locales.languages) { %>
                                    <% let currentLanguage = utils.locales.languages[language] %>
                                    <a class="dropdown-item<%= utils.locales.language === currentLanguage.id ? " active": "" %>" href="#" data-language="<%= currentLanguage.id %>">
                                        <div class="dropdown-item-wrapper">
                                            <span class="country-flag">
                                                <img alt="<%= currentLanguage.id + "-language" %>" src="<%= currentLanguage.base64 %>"/>
                                            </span>
                                            <span><%= __(currentLanguage.id + "_language") %></span>
                                        </div>
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0 position-relative">
                    <input class="mr-sm-2" type="search" aria-label="Search">
                    <i class="position-absolute material-icons">search</i>
                </form>
            </div>
        </nav>
    </div>
</header>
