<div class="col-2 skill system text-center mb-4" data-id="<%= skill._id %>" data-slug="<%= skill.slug %>">
    <div class="skill-container system-container">
        <a href="../back/update-skill/:<%= skill._id %>">
            <div class="skill-content system-content">
                <img class="d-block mx-auto" src="<%= cloudinary.url("skills/" + skill.slug + ".png", {fetch_format: "auto", quality: "auto", secure: true}) %>" alt="<%= skill.name %>" width="128" />
                <h2 class="h5 mt-4"><%= __(skill.name) %></h2>
            </div>
        </a>
    </div>
    <div class="skill-tools system-tools">
        <div class="row">
            <div class="col-12 skill-delete system-delete mx-auto">
                <a href="../api/skill/delete">
                    <span>Delete skill</span>
                </a>
            </div>
        </div>
    </div>
</div>
