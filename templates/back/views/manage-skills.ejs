<!DOCTYPE html>
<html lang="<%= global.utils.locales.language %>">
    <%
        let data = (() => {
            let object = {};

            object.head = {
                title: "GÃ©rer les skills",
                viewStyleUrls: [
                    "<link defer='defer' rel='stylesheet' href='../../css/back/views/manage-skills.css' type='text/css'>"
                ],
                viewScriptUrls: [
                    "<script defer='defer' src='../../public/dist/back/js/manage-skills.js' type='text/javascript'></script>"
                ]
            };
            object.activeIndex = "4.1";
            object.icon = "create";

            return object;
        })(),
        modalData = {
            title: "Warning!",
            id: "response-modal",
            titleId: "success-modal-id"
        };
    %>
    <%- include("./../layout/head", {head: data.head}) %>

    <body>
    <section class="wrapper">
        <%- include("./../layout/menu", {data: data}) %>

        <div id="content">
            <div class="container-fluid">
                <div class="row mb-5">
                    <div class="col-12">
                        <h1 class="text-white h4">
                            <i class="material-icons">developer_board</i>
                            <span class="ml-2"><%= data.head.title %></span>
                        </h1>
                    </div>
                </div>
                <div id="display-skills" class="row">
                    <div class="col-2 skill-placeholder system-placeholder h-100 text-center">
                        <a href="/back/add-skill" class="d-block">
                            <div class="skill-container system-container">
                                <img src="<%= cloudinary.url("skills/default.png", {fetch_format: "auto", quality: "auto", secure: true}) %>" alt="Default skill" />
                                <h2 class="h6 mt-4">
                                    <i class="material-icons">add</i>
                                    <span>Create a skill</span>
                                </h2>
                            </div>
                        </a>
                    </div>
                    <% for (let i = 0, count = skills.length; i < count; i++) { %>
                        <% let skill = skills[i] %>
                        <%- include("./../modules/show-skill", {skill: skill}) %>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
    <%- include("./../modules/modal/response", {data: modalData}) %>
    </body>
</html>
